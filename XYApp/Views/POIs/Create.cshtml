@model XYApp.Models.POI

@{
    ViewData["Title"] = "Criar POI";
}

<h2>Criar POI</h2>

<h4>POI</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomePOI" class="control-label"></label>
                <input asp-for="NomePOI" class="form-control"  />
                <span asp-validation-for="NomePOI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PntX" class="control-label"></label>
                <input asp-for="PntX" class="form-control" pattern="[0-9]+$"  />
                <span asp-validation-for="PntX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PntY" class="control-label"></label>
                <input asp-for="PntY" class="form-control" pattern="[0-9]+$" />
                <span asp-validation-for="PntY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
